## AUXILIARY FUNCTIONS
#   (1) check_matrix




# (1) check_matrix --------------------------------------------------------
#' @keywords internal
#' @noRd
check_matrix <- function(fname, X){
  cond1 = is.matrix(X)
  cond2 = !any(is.na(X))
  cond3 = !any(is.infinite(X))
  
  if (!(cond1&&cond2&&cond3)){
    stop(paste0("* ",fname," : an input is not a valid matrix."))}
}
